							<a href="https://berndwolf.net/en/home" class="icon-link" target="_blank" rel="noopener noreferrer">
								@components.Icon("external", "24", "")
								berndwolf.net
							</a>
						</p>
					</article>
				</li>
				<li class="service-card">
					<article>
						<h3>{ pCtx.T("projects.websitesBuilt.evolveFestivalWebsite.name") }</h3>
						<p>{ pCtx.T("projects.websitesBuilt.evolveFestivalWebsite.description") }</p>
