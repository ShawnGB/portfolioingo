					@components.Icon("github", "24", "")
					{ pCtx.T("projects.currentProject.linkGithubText") }
				</a>
			</p>
		</section>
		@layouts.SectionDivider()
		<section>
			<h2>{ pCtx.T("projects.websitesBuilt.title") }</h2>
			<ul class="is-grid">
				<li class="service-card">
					<article>
						<h3>{ pCtx.T("projects.websitesBuilt.jessebecker.name") }</h3>
						<p>{ pCtx.T("projects.websitesBuilt.jessebecker.description") }</p>
						<p class="project-links">
							<a href="http://www.jessebecker.com/" class="icon-link" target="_blank" rel="noopener noreferrer">
								@components.Icon("external", "24", "")
								www.jessebecker.com
							</a>
						</p>
					</article>
				</li>
				<li class="service-card">
					<article>
						<h3>{ pCtx.T("projects.websitesBuilt.arinashanzev.name") }</h3>
						<p>{ pCtx.T("projects.websitesBuilt.arinashanzev.description") }</p>
