							<a href="https://github.com/ShawnGB/uskillity-backend" class="icon-link" target="_blank" rel="noopener noreferrer">
								@components.Icon("github", "24", "")
								{ pCtx.T("projects.websitesBuilt.uskillity.linkBackendRepoText") }
							</a>
						</div>
					</article>
				</li>
			</ul>
		</section>
		@layouts.SectionDivider()
		<section>
			<h2>{ pCtx.T("projects.cultural.title") }</h2>
			<ul class="is-grid">
				<li class="service-card">
					<article>
						<h3>{ pCtx.T("projects.cultural.kultschaette.name") }</h3>
