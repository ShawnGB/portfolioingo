templ Projects(pCtx i18n.PageContext) {
	@layouts.SubpageTemplate(pCtx, "projects.title", "projects.pageSubtitle", "projects.pageTitle", "projects.pageMetaDescription") {
		<section>
			<h2>{ pCtx.T("projects.introduction.title") }</h2>
			<p>{ pCtx.T("projects.introduction.p1") }</p>
			<p>{ pCtx.T("projects.introduction.p2") }</p>
		</section>
		@layouts.SectionDivider()
		<section>
			<h2>{ pCtx.T("projects.currentProject.title") }</h2>
			<p>{ pCtx.T("projects.currentProject.description") }</p>
			<dl class="project-details-list">
				<dt>{ pCtx.T("projects.currentProject.motivation.label") }</dt>
				<dd>{ pCtx.T("projects.currentProject.motivation.text") }</dd>
				<dt>{ pCtx.T("projects.currentProject.stack.label") }</dt>
				<dd>
					<div class="skill-list">
						<span class="tech-label">Go (Golang) + native SSR templating</span>
