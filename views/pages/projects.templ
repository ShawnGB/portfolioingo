							<a href="https://arinashanzev.com" class="icon-link" target="_blank" rel="noopener noreferrer">
								@components.Icon("external", "24", "")
								arinashanzev.com
							</a>
						</p>
					</article>
				</li>
				<li class="service-card">
					<article>
						<h3>{ pCtx.T("projects.websitesBuilt.berndwolf.name") }</h3>
						<p>{ pCtx.T("projects.websitesBuilt.berndwolf.description") }</p>
