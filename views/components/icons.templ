package components

// Icon wrapper component - Unified stroke-based design system (Lucide-inspired)
// Consistent 1.5px stroke, rounded caps/joins, 24px viewBox
templ Icon(name string, size string, class string) {
	<svg class={ "icon icon-" + name, class } width={ size } height={ size } viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
		if name == "github" {
			@IconGitHub()
		} else if name == "download" {
			@IconDownload()
		} else if name == "external" {
			@IconExternal()
		} else if name == "heart" {
			@IconHeart()
		} else if name == "compass" {
			@IconCompass()
		} else if name == "briefcase" {
			@IconBriefcase()
		} else if name == "calendar" {
			@IconCalendar()
		} else if name == "book-open" {
			@IconBookOpen()
		} else if name == "code" {
			@IconCode()
		} else if name == "users" {
			@IconUsers()
		} else if name == "tool" {
			@IconTool()
		} else if name == "palette" {
			@IconPalette()
		} else if name == "zap" {
			@IconZap()
		} else if name == "music" {
			@IconMusic()
		} else if name == "map" {
			@IconMap()
		}
	</svg>
}

